@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="RouteSelection" data-ng-submit="submitForm()" data-ng-controller="AgentsController" class="form-horizontal" role="form" novalidate>

    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/ServiceRate/ViewRouteSelections">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Route Selection   </span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>


    <div class="form-group" ng-class="{ 'has-error':RouteSelection.Services.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Services</label>

        <div class="col-sm-9">

            <select id="Services" class="col-xs-10 col-sm-5" data-ng-model="model.Services" name="Services"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.Services.$error.required && submitted">
                Services is required.
            </span>
        </div>

    </div>


    <div class="form-group" ng-class="{ 'has-error':RouteSelection.OCS.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Origin Country Set</label>

        <div class="col-sm-9">

            <select id="OCS" class="col-xs-10 col-sm-5" data-ng-model="model.OCS" name="OCS"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7">
                <input type="checkbox" />Check for no-pickup set.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.OCS.$error.required && submitted">
                
                Origin Country Set is required.
            </span>
        </div>

    </div>

    <div class="form-group" ng-class="{ 'has-error':RouteSelection.OPCS.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Origin Post Code Set</label>

        <div class="col-sm-9">

            <select id="OPCS" class="col-xs-10 col-sm-5" data-ng-model="model.OPCS" name="OPCS"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7">
                <input type="checkbox" />Check for no-pickup set.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.OPCS.$error.required && submitted">
                
                Origin Post Code Set is required.
            </span>
        </div>

    </div>

    <div class="form-group" ng-class="{ 'has-error':RouteSelection.DCS.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Dest. Country Set</label>

        <div class="col-sm-9">

            <select id="DCS" class="col-xs-10 col-sm-5" data-ng-model="model.DCS" name="DCS"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7">
                <input type="checkbox" />Check for no-pickup set.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.DCS.$error.required && submitted">

                Dest. Country Set is required.
            </span>
        </div>

    </div>


    <div class="form-group" ng-class="{ 'has-error':RouteSelection.DPCS.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Dest. Post Code Set</label>

        <div class="col-sm-9">

            <select id="DPCS" class="col-xs-10 col-sm-5" data-ng-model="model.DPCS" name="DPCS"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>

            <span class="help-inline col-xs-12 col-sm-7">
                <input type="checkbox" />Check for no-pickup set.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.DPCS.$error.required && submitted">
                Dest. Post Code Set is required.
            </span>
        </div>

    </div>

    <div class="form-group" ng-class="{ 'has-error':RouteSelection.Routes.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Routes</label>

        <div class="col-sm-9">

            <select id="Routes" class="col-xs-10 col-sm-5" data-ng-model="model.Routes" name="Routes"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="RouteSelection.Routes.$error.required && submitted">
                Routes is required.
            </span>
        </div>

    </div>


    <hr />

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</form>