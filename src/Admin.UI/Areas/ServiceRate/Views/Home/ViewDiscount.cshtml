@{
    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->
        <div class="center" data-ng-controller="ViewDiscountController">

            <form name="StateForm" novalidate>

                <div class="pull-right tableTools-container">
                    <a class="btn-new-mail" href="/ServiceRate/Discount">
                        <span class="btn btn-purple no-border">
                            <i class="ace-icon fa  bigger-130"></i>
                            <span class="bigger-110">Add Discount</span>
                        </span>
                    </a>
                </div>
                <div class="clearfix">
                    <div class="pull-right tableTools-container"></div>
                </div>

                <div>
                    <button ng-hide="viewField" ng-click="modify()">Modify</button>
                    <button ng-show="modifyField" ng-click="update()">Update</button>
                    @*<table my-table="overrideOptions" aa-data="datasrc" ao-column-defs="columnDefs" fn-row-callback="myCallback" class="table table-striped table-bordered table-hover dataTables_info">*@
                    <table style="width:100%;">
                        <thead>
                            <tr style="text-align:center;">
                                @*<th style="width:150px">Service</th>
                                    <th style="width:150px">Discount Value</th>
                                    <th style="width:250px">Effective Date</th>
                                    <th style="width:100px">Created</th>
                                    <th style="width:100px"></th>*@
                                <th>Name:</th>
                                <th>Date Of Birth</th>
                                <th>Email Id</th>
                                <th>Phone No.</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="tableData in tabelsData">
                                <td>
                                    <div ng-hide="viewField">{{tableData.name | uppercase}}</div>
                                    <div ng-show="modifyField"><input type="text" ng-model="tableData.name" /></div>
                                </td>
                                <td>
                                    <div ng-hide="viewField">{{tableData.dob}}</div>
                                    <div ng-show="modifyField"><input type="text" ng-model="tableData.dob" /></div>
                                </td>
                                <td>
                                    <div ng-hide="viewField">{{tableData.emailId}}</div>
                                    <div ng-show="modifyField"><input type="text" ng-model="tableData.emailId" /></div>
                                </td>
                                <td>
                                    <div ng-hide="viewField">{{tableData.phone}}</div>
                                    <div ng-show="modifyField"><input type="text" ng-model="tableData.phone" /></div>
                                </td>
                                <td>
                                    <div ng-hide="viewField">{{tableData.address}}</div>
                                    <div ng-show="modifyField">
                                        <textarea ng-model="tableData.address"></textarea>
                                    </div>
                                </td>
                                <td>
                                    
                                    @*<button ng-hide="viewField">Add</button>
                                    <button ng-hide="viewField">Remove</button>*@
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</div>

<link type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/themes/redmond/jquery-ui.css" rel="stylesheet" />
<script type="text/javascript" src="~/assets/js/jquery.min.js"></script>
<!-- DataTables -->

<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.8.2/jquery.dataTables.min.js">
</script>