@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="CountryForm" data-ng-submit="submitCountryForm()"  data-ng-controller="CountryController" class="form-horizontal" role="form" novalidate>

    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/ServiceRate/ViewCountries">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Countries</span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':CountryForm.Name.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Country</label>

        <div class="col-sm-9">
            <input type="text" name="Name" id="Name" ng-model="Country.Name" class="col-xs-10 col-sm-5" required placeholder="Enter Country" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CountryForm.Name.$error.required && submitted">
                Country is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':CountryForm.ISOCode.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">ISO Code</label>

        <div class="col-sm-9">
            <input type="text" name="ISOCode" id="ISOCode" ng-model="Country.ISOCode" class="col-xs-10 col-sm-5" required placeholder="Enter ISO Code" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CountryForm.ISOCode.$error.required && submitted">
                ISO Code is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':CountryForm.TopLevelDomain.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Top Level Domain</label>

        <div class="col-sm-9">
            <input type="text" name="TopLevelDomain" id="TopLevelDomain" ng-model="Country.TopLevelDomain" class="col-xs-10 col-sm-5" required placeholder="Enter Top Level Domain" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CountryForm.TopLevelDomain.$error.required && submitted">
                Top Level Domain is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':CountryForm.DialingCode.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Dialing Code</label>

        <div class="col-sm-9">
            <input type="text" name="DialingCode" id="DialingCode" ng-model="Country.DialingCode" class="col-xs-10 col-sm-5" required placeholder="Enter Dialing Code" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CountryForm.DialingCode.$error.required && submitted">
                Dialing Code is required.
            </span>
        </div>
    </div>

    <div class="form-group">
