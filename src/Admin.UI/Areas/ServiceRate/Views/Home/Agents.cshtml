@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="Agents" data-ng-submit="submitForm()" data-ng-controller="AgentsController" class="form-horizontal" role="form" novalidate>

    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/ServiceRate/ViewAgents">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Agents</span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':Agents.Country.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Country</label>

        <div class="col-sm-9">

            <select id="Country" class="col-xs-10 col-sm-5" data-ng-model="model.CountryId" name="Country"
                    data-ng-options="country.Id as country.Name for country in Country track by country.Id" data-ng-change="GetValue()" required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.Country.$error.required && submitted">
                Country is required.
            </span>
        </div>
        <input type="hidden" ng-model="model.CountryCode" />
    </div>



    <div class="form-group" ng-class="{ 'has-error':Agents.AgentName.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">
            Agent Name
        </label>

        <div class="col-sm-9">
            <input type="text" name="AgentName" id="AgentName" ng-model="model.AgentName" class="col-xs-10 col-sm-5" ng-minlength="3" required placeholder="Enter Agent Name" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.AgentName.$error.required && submitted">
                Agent Name is required.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.AgentName.$error.minlength && submitted">
                Agent Name should be min 3 character.
            </span>
        </div>
    </div>


    <div class="form-group" ng-class="{ 'has-error':Agents.LabelAPI.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Label API</label>

        <div class="col-sm-9">
            <input type="text" name="LabelAPI" id="LabelAPI" ng-model="model.LabelAPI" class="col-xs-10 col-sm-5" ng-maxlength="50" required="" placeholder="Enter Label API" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.LabelAPI.$error.required && submitted">
                Label API  is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':Agents.PickupCharge.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Pickup Charge</label>

        <div class="col-sm-9">
            <input type="text" name="PickupCharge" id="PickupCharge" ng-model="model.PickupCharge" class="col-xs-10 col-sm-5" ng-maxlength="50" required="" placeholder="Enter Pickup Charge" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.PickupCharge.$error.required && submitted">
                Pickup Charge is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':Agents.SatPickupCharge.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Saturday Pickup Charge</label>

        <div class="col-sm-9">
            <input type="text" name="SatPickupCharge" id="SatPickupCharge" data-ng-model="model.SatPickupCharge" placeholder="Enter Saturday Pickup Charge" class="col-xs-10 col-sm-5" required />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.SatPickupCharge.$error.required && submitted">
                Saturday Pickup Charge is required.
            </span>

        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':Agents.TrackingURL.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Tracking URL</label>

        <div class="col-sm-9">
            <input type="url" name="TrackingURL" id="TrackingURL" data-ng-model="model.TrackingURL" class="col-xs-10 col-sm-5" required placeholder="Enter Tracking URL" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.TrackingURL.$error.required && submitted">
                Tracking URL  is required.
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="Agents.TrackingURL.$invalid && submitted">
                Tracking URL  should be proper URL.
            </span>

        </div>
    </div>

    <hr />

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</form>