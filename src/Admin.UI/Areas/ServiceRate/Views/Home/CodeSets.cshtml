@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="CodeSets" data-ng-submit="submitForm()" data-ng-controller="AgentsController" class="form-horizontal" role="form" novalidate>

    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/ServiceRate/ViewRouteSelections">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Sets   </span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>


    <div class="form-group" ng-class="{ 'has-error':CodeSets.SetName.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Set Name</label>

        <div class="col-sm-9">

            <select id="SetName" class="col-xs-10 col-sm-5" data-ng-model="model.SetName" name="SetName"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CodeSets.SetName.$error.required && submitted">
                SetName is required.
            </span>
        </div>

    </div>

    <div class="form-group" ng-class="{ 'has-error':CodeSets.PostCode.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Post Code</label>

        <div class="col-sm-9">

            <select id="PostCode" class="col-xs-10 col-sm-5" data-ng-model="model.PostCode" name="PostCode"
                    required>
                <option value='' disabled selected>Please Choose</option>
            </select>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CodeSets.PostCode.$error.required && submitted">
                PostCode is required.
            </span>
        </div>

    </div>

    <hr />

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</form>