@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form class="form-horizontal" role="form" name="mainForm" data-ng-submit="sendVendorForm()" data-ng-controller="vendorController" novalidate>
    <div id="errorMessages" class="error">{{message}}</div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Nick Name </label>

        <div class="col-sm-9">
            <input id="Name" class="col-xs-10 col-sm-7" name="Name" type="text" data-ng-model="vendor.Name" required />
            <span class="help-inline col-xs-12 col-sm-7">
                <span class="error" data-ng-show="mainForm.Name.$error.required">* </span>
            </span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Carrier</label>

        <div class="col-sm-9">
            <select class="col-xs-10 col-sm-7" name="vendortype" ng-model="vendor.VendorType"
                    data-ng-options="vendor.Id as vendor.Name for vendor in Vendors track by vendor.Id" ng-dropdown required></select>
            <span class="help-inline col-xs-12 col-sm-7">
                <span class="error" data-ng-show="mainForm.vendortype.$error.required">* </span>
            </span>
        </div>
    </div>

    <h3 class="header smaller lighter blue">
        {{vendor.type}} Configuration Setting
    </h3>

    <div class="row" id="DHL" ng-if="vendor.VendorType == '1'">

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Third Party Account#</label>

            <div class="col-sm-9">
                <input id="DHLAcc" class="col-xs-10 col-sm-7" name="DHLAcc" data-ng-model="vendor.DHLAcc" required />

                <span class="input-group-addon">
                    <span class="error" data-ng-show="mainForm.DHLAcc.$error.required">*</span>
                </span>
            </div>
        </div>
    </div>

    <div class="row" id="Endicia" ng-if="vendor.VendorType == '2'">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Account#</label>

            <div class="input-group col-sm-9">
                <input id="EndiciaAcc" class="col-xs-10 col-sm-7" name="EndiciaAcc" type="number" data-ng-model="vendor.EndiciaAcc" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.EndiciaAcc.$error.required">*</span>
                </span>
            </div>
        </div>
    </div>

    <div class="row" id="FedEx" ng-if="vendor.VendorType == '3'">
        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">
                Account#
            </label>

            <div class="col-sm-9">
                <input id="FedexAcc" class="form-control" name="FedexAcc" type="number" data-ng-model="vendor.FedexAcc" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.FedexAcc.$error.required">*</span>
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">Meter#</label>

            <div class="col-sm-9">
                <input id="FedexMeter" class="form-control" name="FedexMeter" type="number" data-ng-model="vendor.FedexMeter" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.FedexMeter.$error.required">*</span>
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">Billing (Payment) Account#</label>

            <div class="col-sm-9">
                <input id="FedexPayAcc" class="form-control" name="FedexPayAcc" type="number" data-ng-model="vendor.FedexPayAcc" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.FedexPayAcc.$error.required">*</span>
                </span>
            </div>
        </div>
    </div>

    <div class="row" id="UPS" ng-if="vendor.VendorType == '4'">

        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">License#</label>

            <div class="input-group col-sm-8">
                <input id="UPSLicenseNo" class="form-control" name="UPSLicenseNo" type="number" data-ng-model="vendor.UPSLicenseNo" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.UPSLicenseNo.$error.required">*</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">User Name</label>

            <div class="col-sm-9">
                <input id="UPSUserName" class="form-control" name="UPSUserName" type="text" data-ng-model="vendor.UPSUserName" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.UPSUserName.$error.required">*</span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">Password</label>

            <div class="col-sm-9">
                <input id="UPSpassword" class="form-control" name="UPSpassword" type="password" data-ng-model="vendor.UPSpassword" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.UPSpassword.$error.required">*</span>
                </span>
            </div>
        </div>

        <div class="form-group">
            <label for="form-field-mask-1" class="col-sm-3">Third Party Account#</label>

            <div class="input-group col-sm-8">
                <input id="UPSAcc" class="form-control" name="UPSAcc" type="number" data-ng-model="vendor.UPSAcc" required />
                <span class="help-inline col-xs-12 col-sm-7">
                    <span class="error" data-ng-show="mainForm.UPSAcc.$error.required">*</span>
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">
            Effective Date
        </label>

        <div class="col-sm-9">
            <input type="text" name="effectiveDate" data-date-format="dd-mm-yyyy" id="effectiveDate" ng-model="vendor.Effective" class="form-control date-picker" required>
            <span class="input-group-addon">
                <i class="fa fa-calendar bigger-110"></i>
            </span>
            <span class="help-inline col-xs-12 col-sm-7">
                <span class="error" data-ng-show="mainForm.effectiveDate.$error.required">*</span>
            </span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">
            Expiration Date
        </label>

        <div class="col-sm-9">
            <input type="text" data-date-format="dd-mm-yyyy" name="expirationDate" ng-model="vendor.Expiration" id="expirationDate" class="form-control date-picker" required>
            <span class="input-group-addon">
                <i class="fa fa-calendar bigger-110"></i>
            </span>
            <span class="help-inline col-xs-12 col-sm-7">
                <span class="error" data-ng-show="mainForm.expirationDate.$error.required">*</span>
            </span>
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="button" class="btn btn-info" ng-disabled="vendor.isDisabled">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
</form>