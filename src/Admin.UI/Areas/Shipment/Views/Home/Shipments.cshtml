@{

    Layout = "~/Views/shared/_layout.cshtml";
}
<div class="col-sm-10">
    <div class="widget-box">
        <div class="widget-header">
            <h4 class="widget-title">Shipments </h4>
        </div>
        <div class="widget-body">
            <div class="widget-main" >

                <form class="form-inline" name="shipmentsForm" data-ng-submit="sendShipmentsForm()" data-ng-controller="shipmentsController" novalidate>
                    <div id="errorMessages" class="error">{{message}}</div>
                    <div id="frmShipments">
                        <div class="col-sm-6">
                            <div class="widget-box">
                                <div class="widget-header widget-header-flat widget-header-small">
                                    <h5 class="widget-title">Shipper Address </h5>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-main">

                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Company </label><span class="error" ng-show="shipmentsForm.company.$error.required">*</span>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="company" id="company" ng-model="Shipments.Company" class="form-control" ng-maxlength="100" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Sent By<span class="error" ng-show="shipmentsForm.name.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="name" id="name" ng-model="Shipments.Name" class="form-control" ng-maxlength="50" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Phone  <span class="error" ng-show="shipmentsForm.phone.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="phone" id="phone" ng-model="Shipments.Phone" class="form-control" ng-disabled="Shipments.isDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Email <span class="error" ng-show="shipmentsForm.email.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="email" name="email" id="email" ng-model="Shipments.Email" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="widget-header">
                                            <h6 class="widget-title">Address Information</h6>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address<span class="error" ng-show="shipmentsForm.address.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <select name="address" ng-model="Shipments.AddressType" data-ng-options="address.Id as address.ShortName for address in Address track by address.Id" data-ng-change="GetShipperAddressValue()" required></select>
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div ng-if="Shipment.AddressType == 0">
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                Address Caption <span class="error" data-ng-show="shipmentsForm.addressCaption.$error.required">*</span>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" class="form-control" placeholder="" id="addressCaption" name="addressCaption" data-ng-model="Shipments.AddressCaption" required>
                                            </div>
                                        </div>

                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 1 <span class="error" ng-show="shipmentsForm.addressline1.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="addressline1" id="addressline1" ng-model="Shipments.Address1" class="form-control" ng-disabled="Shipments.isDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 2 </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="addressline2" id="addressline2" ng-model="Shipments.Address2" class="form-control" ng-disabled="Shipments.isDisabled" />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 3 </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="addressline3" id="addressline3" ng-model="Shipments.Address3" class="form-control" ng-disabled="Shipments.isDisabled" />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>City <span class="error" ng-show="shipmentsForm.city.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="city" id="city" ng-model="Shipments.City" class="form-control" ng-disabled="Shipments.isDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>

                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Country <span class="error" ng-show="shipmentsForm.CountryId.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <select id="CountryId" class="form-control" data-ng-model="Shipments.CountryId" name="CountryId"
                                                        data-ng-options="country.Id as country.Name for country in Country track by country.Id" ng-disabled="Shipments.isDisabled" data-ng-change="GetDivision(Shipments.CountryId)" required></select>
                                            </div>
                                            <input type="hidden" ng-model="Shipments.CountryName"/>
                                            <input type="hidden" ng-model="Shipments.CountryCode" />
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Postal Code  <span class="error" ng-show="shipmentsForm.postalcode.$error.required">*</span> </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="postalcode" id="postalcode" ng-model="Shipments.PostalCode" class="form-control" ng-disabled="Shipments.isDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Division  <span class="error" ng-show="shipmentsForm.ddlState.$error.required">*</span> </label>
                                            </label>

                                            <div class="input-group col-sm-8">

                                                <select id="Division" class="form-control" data-ng-model="Shipments.Division" name="Division"
                                                        data-ng-options="state.Name as state.Name for state in States track by state.Id" ng-disabled="Shipments.isDisabled" required></select>
                                            </div>
                                            <input  type="hidden" ng-model="Shipments.DivisionCode" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="widget-box">
                                <div class="widget-header widget-header-flat widget-header-small">
                                    <h5 class="widget-title">Consigee Address </h5>
                                </div>
                                <div class="widget-body">
                                    <div class="widget-main">

                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Company  <span class="error" ng-show="shipmentsForm.RCompany.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="RCompany" id="RCompany" ng-model="Shipments.RCompany" class="form-control" ng-maxlength="100" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Receiver's Name<span class="error" ng-show="shipmentsForm.Rname.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Rname" id="Rname" ng-model="Shipments.Rname" class="form-control" ng-maxlength="50" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Phone  <span class="error" ng-show="shipmentsForm.Rphone.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Rphone" id="Rphone" ng-model="Shipments.Rphone" class="form-control" ng-disabled="Shipments.isRDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Email <span class="error" ng-show="shipmentsForm.Remail.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="email" name="Remail" id="Remail" ng-model="Shipments.REmail" class="form-control" required />
                                            </div>
                                        </div>

                                        <div class="widget-header">
                                            <h6 class="widget-title">Address Information</h6>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address<span ng-show="shipmentsForm.Raddress.$error.required" class="error">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <select name="Raddress" ng-model="Shipments.RAddressType" data-ng-options="address.Id as address.ShortName for address in Address track by address.Id" data-ng-change="GetConsigeeAddressValue()" required></select>
                                            </div>
                                        </div>

                                        <div style="clear:both;height:5px;"></div>
                                        <div ng-if="Shipments.RAddressType == 0">
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                Address Caption <span class="error" data-ng-show="shipmentsForm.raddressCaption.$error.required">*</span>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" class="form-control" placeholder="" id="raddressCaption" name="raddressCaption" data-ng-model="Shipments.RaddressCaption" required>
                                            </div>
                                        </div>

                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 1 <span class="error" ng-show="shipmentsForm.Raddressline1.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Raddressline1" id="Raddressline1" ng-model="Shipments.Raddressline1" class="form-control" ng-disabled="Shipments.isRDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 2 </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Raddressline2" id="Raddressline2" ng-model="Shipments.Raddressline2" ng-disabled="Shipments.isRDisabled" class="form-control" />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Address Line 3 </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Raddressline3" id="Raddressline3" ng-model="Shipments.Raddressline3" ng-disabled="Shipments.isRDisabled" class="form-control" />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>City<span class="error" ng-show="shipmentsForm.Rcity.$error.required">*</span></label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Rcity" id="Rcity" ng-model="Shipments.Rcity" class="form-control" ng-disabled="Shipments.isRDisabled" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>

                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Country<span class="error" ng-show="shipmentsForm.RCountry.$error.required">*</span> </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <select id="RCountry" class="form-control" data-ng-model="Shipments.RCountryId" name="RCountry"
                                                        data-ng-options="country.Id as country.Name for country in Country track by country.Id" ng-disabled="Shipments.isRDisabled" data-ng-change="GetDivision(Shipments.RCountryId)" required></select>
                                            </div>
                                            <input type="hidden" ng-model="Shipments.RCountryName" />
                                            <input type="hidden" ng-model="Shipments.RCountryCode" />
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Postal Code <span class="error" ng-show="shipmentsForm.Rpostalcode.$error.required">*</span> </label>
                                            </label>

                                            <div class="input-group col-sm-8">
                                                <input type="text" name="Rpostalcode" id="Rpostalcode" ng-model="Shipments.Rpostalcode" ng-disabled="Shipments.isRDisabled" class="form-control" required />
                                            </div>
                                        </div>
                                        <div style="clear:both;height:5px;"></div>
                                        <div>
                                            <label for="form-field-mask-1" class="col-sm-3">
                                                <label>Division <span class="error" ng-show="shipmentsForm.RddlState.$error.required">*</span> </label>
                                            </label>

                                            <div class="input-group col-sm-8">

                                                <select id="RDivision" class="form-control" data-ng-model="Shipments.RDivision" name="RDivision"
                                                        data-ng-options="state.Name as state.Name for state in States track by state.Id" ng-disabled="Shipments.isRDisabled" required></select>
                                            </div>
                                            <input type="hidden" ng-model="Shipments.RDivisionCode" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="clear:both;height:5px;"></div>
                        <div class="widget-header">
                            <h4 class="widget-title">Package Information </h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="col-sm-6">
                                    <div class="widget-box">

                                        <div class="widget-body">
                                            <div class="widget-main">

                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Shipment Date <span class="error" ng-show="shipmentsForm.shipmentdate.$error.required">*</span></label>
                                                    </label>

                                                    <div class="input-group col-sm-8">
                                                        <input type="text" data-date-format="dd-mm-yyyy" id="shipmentdate" name="shipmentdate" data-ng-model="Shipments.shipmentdate" class="form-control date-picker" required>
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-calendar bigger-110"></i>
                                                        </span>
                                                    </div>
                                                </div>

                                                <div style="clear:both;height:5px;"></div>
                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Weight & Dimensions <span class="error" ng-show="shipmentsForm.weight.$error.required">*</span></label>
                                                    </label>

                                                    <div class="input-group col-sm-10">

                                                        <div>

                                                            <table class="table col-sm-10">
                                                                <tr>

                                                                    <th>Width</th>
                                                                    <th colspan="3">Dimensions</th>
                                                                </tr>
                                                                <tr ng:repeat="item in Parcel.items">
                                                                    <td><input type="number" min="0" ng:model="item.Weight" required class="col-xs-7"></td>
                                                                    <td><input type="number" min="0" ng:model="item.Length" required class="col-xs-7"></td>
                                                                    <td><input type="number" min="0" ng:model="item.Width" required class="col-xs-7"></td>
                                                                    <td><input type="number" min="0" ng:model="item.Height" required class="col-xs-7"></td>
                                                                    <td>

                                                                        <button type="button" class="btn-info" ng-click="removeItem($index)">Remove Packet</button>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td colspan="3"><button type="button" class="btn-info" ng-click="addItem()">Add Packet</button></td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="widget-box">

                                        <div class="widget-body">
                                            <div class="widget-main">

                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Package Type <span class="error" ng-show="shipmentsForm.packagetype.$error.required">*</span></label>
                                                    </label>

                                                    <div class="input-group col-sm-8">
                                                        <select name="packagetype" ng-model="Shipments.packagetype">
                                                            <option ng-option value="1">Document</option>
                                                            <option ng-option value="2">Standard Package</option>
                                                            <option ng-option value="3">Has Heavy Piece(s)</option>
                                                            <option ng-option value="4">Has Bulky Piece(s)</option>
                                                        </select>
                                                        <span class="help-button" data-rel="popover" data-trigger="hover" data-placement="left" data-content=" Standard Package (Can be carrier by one person).Has Heavy Piece(s) weight is more than 35 lbs. Has Bulky Piece(s) at least one dimension is larger than 40 inches" title="Info">?</span>
                                                    </div>
                                                </div>
                                                <div style="clear:both;height:5px;"></div>
                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Unit System<span class="error" ng-show="shipmentsForm.unitsystem.$error.required">*</span></label>
                                                    </label>

                                                    <div class="input-group col-sm-8">
                                                        <select name="unitsystem" ng-model="Shipments.unitsystem">
                                                            <option value="us" selected="selected">Imperial (lb-inch)</option>
                                                            <option value="eu">Metric (kg-cm)</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div style="clear:both;height:5px;"></div>
                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Insurance<span class="error" ng-show="shipmentsForm.insurance.$error.required">*</span></label>
                                                    </label>

                                                    <div class="input-group col-sm-1">
                                                        <input type="checkbox" name="insurance" id="insurance" ng-model="Shipments.Insurance" class="form-control" required="" />
                                                    </div>
                                                </div>
                                                <div style="clear:both;height:5px;"></div>
                                                <div>
                                                    <label for="form-field-mask-1" class="col-sm-3">
                                                        <label>Declared Value  </label>
                                                    </label>

                                                    <div class="input-group col-sm-8">
                                                        <input type="text" name="Declared" id="Declared" ng-model="Shipments.Declared" class="form-control" required="" />
                                                    </div>
                                                </div>
                                                <div style="clear:both;height:5px;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div style="clear:both;height:5px;"></div>
                        <div class="clearfix form-actions" id="divbtn" style="margin-bottom:0px;">
                            <div class="text-right">
                                <button type="submit" class="btn btn-info">
                                    <i class="ace-icon fa fa-check bigger-110"></i>
                                    Save
                                </button>

                                <button type="reset" class="btn">
                                    <i class="ace-icon fa fa-undo bigger-110"></i>
                                    New
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>