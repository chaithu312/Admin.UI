@model Admin.UI.UserArea.Model.User
@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<div class="col-sm-7" ng-controller="UserController">
    <div class="widget-box">
        <div class="widget-header">
            <h4 class="widget-title">Registration Information</h4>
        </div>
        <div class="widget-body">
            <div class="widget-main">
             @using (Html.BeginForm("Register", "User", FormMethod.Post))
             {
                    @Html.AntiForgeryToken()
                    <div>
                        <label for="form-field-mask-1" class="col-sm-3">
                            @Html.LabelFor(model => model.userName, " Username ")
                        </label>
                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group col-sm-8">
                            <input type="text" id="form-field-mask-1" class="form-control" placeholder="UserName" ng-model="formInfo.userName" name="userName" required>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <label for="form-field-mask-1" class="col-sm-3">
                            @Html.LabelFor(model => model.password, "Password")
                        </label>
                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group col-sm-8">
                            <input type="password" id="form-field-mask-1" class="form-control " placeholder="Password" ng-model="formInfo.Password" required>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <label for="form-field-mask-1" class="col-sm-3">
                            @Html.LabelFor(model => model.password, "Confirm Password")
                        </label>
                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group col-sm-8">
                            <input type="password" id="form-field-mask-1" class="form-control" placeholder=" Re-Enter Password" ng-model="formInfo.password" name="password" required>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <label for="form-field-mask-1" class="col-sm-3">
                            @Html.LabelFor(model => model.securityQuestion, "Security Question")
                        </label>
                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group col-sm-8">
                            <select id="form-field-select-1" class="form-control" ng-model="formInfo.SecurityQuestion" name="SecurityQuestion" required>
                                <option value="" selected="selected">Please select a Security Question...</option>
                                <option value="What is your mother's first name?">What is your mother's first name?</option>
                                <option value="What is your place of birth?">What is your place of birth?</option>
                                <option value="What is the name of a school you attended?">What is the name of a school you attended?</option>
                                <option value="What is your father's middle name?">What is your father's middle name?</option>
                                <option value="What is your pet's name?">What is your pet's name?</option>
                                <option value="What is your favorite sports team?">What is your favorite sports team?</option>
                            </select>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <label for="form-field-mask-1" class="col-sm-3">
                            @Html.LabelFor(model => model.securityAnswer, "Security Answer")
                        </label>
                        <!-- #section:plugins/input.masked-input -->
                        <div class="input-group col-sm-8">
                            <input type="text" id="form-field-mask-1" class="form-control" placeholder="Answer" ng-model="SecurityAnswer" name="formInfo.SecurityAnswer" required>
                        </div>
                    </div>

                    <div class="clearfix form-actions" style="margin-bottom:0px;">
                        <div class="text-right">
                            <button type="submit" class="btn btn-info">
                                <i class="ace-icon fa fa-check bigger-110"></i>
                                Save
                            </button>
                            &nbsp; &nbsp; &nbsp;
                            <button type="reset" class="btn">
                                <i class="ace-icon fa fa-undo bigger-110"></i>
                                Save & New
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>