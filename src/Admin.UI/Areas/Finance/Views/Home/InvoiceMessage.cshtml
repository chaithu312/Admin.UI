@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="FinanceForm" data-ng-submit="submitFinanceForm()" data-ng-controller="FinanceController" class="form-horizontal" role="form" novalidate>
    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/Finance/ViewInvoiceMessage">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Invoice Message</span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Account No</label>
        <div class="col-sm-9">
            <input type="text" name="AccountNo" id="AccountNo" ng-model="Finance.AccountNo" class="col-xs-10 col-sm-5" required placeholder="Account No" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Message Title</label>
        <div class="col-sm-9">
            <input type="text" name="MessageTitle" id="MessageTitle" ng-model="Finance.MessageTitle" class="col-xs-10 col-sm-5" required placeholder="Message Title" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Message Body</label>
        <div class="col-sm-9">
            <textarea type="text" name="MessageBody" id="MessageBody" ng-model="Finance.MessageBody" class="col-xs-10 col-sm-5" required placeholder="Message Body" ></textarea>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':FinanceForm.EffectiveFrom.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Effective From</label>
        <div class="col-sm-9">
            <input type="text" data-date-format="mm-dd-yyyy" id="EffectiveFrom" name="EffectiveFrom" data-ng-model="Finance.EffectiveFrom" class="col-xs-6 col-sm-2 date-picker" required placeholder="Effective From">
            <span class="input-group-addon col-sm-3">
                <i class="fa fa-calendar bigger-110"></i>
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="FinanceForm.EffectiveFrom.$error.required && submitted">
                Effective From is required.
            </span>
        </div>
    </div>
   
    <div class="form-group" ng-class="{ 'has-error':FinanceForm.EffectiveTo.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Effective From</label>
        <div class="col-sm-9">
            <input type="text" data-date-format="mm-dd-yyyy" id="EffectiveTo" name="EffectiveTo" data-ng-model="Finance.EffectiveTo" class="col-xs-6 col-sm-2 date-picker" required placeholder="Effective To">
            <span class="input-group-addon col-sm-3">
                <i class="fa fa-calendar bigger-110"></i>
            </span>
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="FinanceForm.EffectiveTo.$error.required && submitted">
                Effective To is required.
            </span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Status</label>

        <div class="col-sm-9">
            <select data-ng-model="Finance.Status" ng-init="Finance.Status='1'" id="Status" name="Status" class="col-xs-5 col-sm-2" bs-selectbox>
                <option value="1">Active</option>
                <option value="0">Suspended</option>
            </select>
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</form>