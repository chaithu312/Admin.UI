@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="CostItemsForm" data-ng-submit="submitCostItemsForm()" data-ng-controller="CostItemsController" class="form-horizontal" role="form" novalidate>
    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/Freight/ViewFreightCostItem">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Cost Items</span>
            </span>
        </a>
    </div>
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>
    <div class="form-group" ng-class="{ 'has-error':CostItemsForm.ServiceName.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Service Name</label>
        <div class="col-sm-9">
            <input type="text" name="ServiceName" id="ServiceName" ng-model="CostItems.ServiceName" class="col-xs-10 col-sm-5" required placeholder="Service Name" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="CostItemsForm.ServiceName.$error.required && submitted">
                Service Name is required.
            </span>
        </div>
    </div>
    
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorMessages" class="error">{{message}}</div>
</form>