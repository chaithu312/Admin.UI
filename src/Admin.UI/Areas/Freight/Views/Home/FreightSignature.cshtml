@{

    Layout = "~/Views/shared/_layout.cshtml";
}

<form name="SignatureForm" data-ng-submit="submitSignatureForm()" data-ng-controller="SignatureController" class="form-horizontal" role="form" novalidate>
    <div class="pull-right tableTools-container">
        <a class="btn-new-mail" href="/Freight/ViewFreightSignature">
            <span class="btn btn-purple no-border">
                <i class="ace-icon fa  bigger-130"></i>
                <span class="bigger-110">View Signatures</span>
            </span>
        </a>
    </div>
    
    <div class="clearfix">
        <div class="pull-right tableTools-container"></div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':SignatureForm.Caption.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Caption</label>
        <div class="col-sm-9">
            <input type="text" name="Caption" id="Caption" ng-model="Signature.Caption" class="col-xs-10 col-sm-5" required placeholder="Caption" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="SignatureForm.Caption.$error.required && submitted">
                Caption is required.
            </span>
        </div>
    </div>

    <div class="form-group" ng-class="{ 'has-error':SignatureForm.SignatureText.$invalid && submitted }">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Signature</label>
        <div class="col-sm-9">
            <input type="text" name="SignatureText" id="SignatureText" ng-model="Signature.SignatureText" class="col-xs-10 col-sm-5" required placeholder="Signature" />
            <span class="help-inline col-xs-12 col-sm-7" data-ng-show="SignatureForm.SignatureText.$error.required && submitted">
                Signature is required.
            </span>
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-info" ng-click="submitted=true">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Save
            </button>

            &nbsp; &nbsp; &nbsp;
            <button type="reset" class="btn">
                <i class="ace-icon fa fa-undo bigger-110"></i>
                Reset
            </button>
        </div>
    </div>
    <div id="errorSignatureForms" class="error">{{message}}</div>
</form>