@{
    var message = "";
    var messageType = "";

    if (ViewBag.ViewResponse != null)
    {
        message = ViewBag.ViewResponse.Message;
        messageType = "info";
    }
}
<div class="CancelSave">
    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">

            <button type="button" id="btnSave" name="btnSave" text="Save" class="btn btn-info">Save</button>
            <button type="reset" id="btnCancel" name="btnCancel" class="btn"> <i class="ace-icon fa fa-undo bigger-110"></i>Reset</button>
        </div>
    </div>
</div>
<script src="~/assets/js/adminui.min.js"></script>
<script type="text/javascript">
    $(function () {
        SaveButton.init('@ViewData["saveUrl"]', '@ViewData["cancelUrl"]', '@ViewData["onSuccess"]', $("#btnSave").closest("form"));
        AlertMessage.init('@message', '@messageType');
    });
</script>